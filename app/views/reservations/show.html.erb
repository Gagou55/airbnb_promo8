<div class="page">
  <div class="container text-center">
<br>
  <div class="row">
    <div class="col-xs-12 col-md-4">
      <div id="reservation-window-confirmation marg-20">
        <div class="text-center">
          <h2>Your reservation</h2>
          <% @flat = Flat.find(@reservation.flat_id) %>
          <%= link_to flat_path(@flat) do %>
            <%= image_tag @flat.picture1 %>
          <% end %>
          <%= link_to flat_path(@flat) do %>
            <%= "Your appartment: #{@flat.title}" %> <br>
          <% end %>
          <% @user = User.find(@reservation.user_id) %>
          <%= "Owner contact: #{@user.first_name} #{@user.last_name}" %> <br>
          <%= "Date of arrival: #{@reservation.begin_date}" %> <br>
          <%= "Date of departure: #{@reservation.end_date}" %> <br> <br>
          <%= "ENJOYYYYY !!!!!!" %>
        </div>
      </div>
    </div>

  </div> <br>
  <br>
  <br>
  <div class="text-center">
          <%= link_to root_path do %>
        <%= "Home" %> <br>
      <% end %>
      </div>

</div>
