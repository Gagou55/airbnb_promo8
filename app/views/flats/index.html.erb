<div class = "container-fluid">
  <div class ="text-center">
    <%= form_tag(flats_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search flats" %>
      <%= submit_tag "Search", :name => nil %>
    <% end %>
  </div>
  <div class="row text-center">
    <h1>Search Result</h1>
  </div>

  <div class="container-fluid">
    <div class="row" style="padding-left: 10px">
      <div class="col-xs-12 col-sm-8 col-md-8 text-center">
        <div class="row">
          <% @flats.each do |flat|%>
            <div class="col-xs-12 col-sm-6 text-center flat-card padding-card-elements">
              <%= flat.description %>
              <%= flat.address %>
              <%= image_tag "http://placehold.it/250x200" %>
              <%=  %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<html>
  <body>
  <div id="map" style="width: 100%; height: 600px;"></div>
    <% content_for(:after_js) do %>
      <%= javascript_tag do %>
        $(document).on('ready', function() {
          handler = Gmaps.build('Google');
          handler.buildMap({ internal: { id: 'map' } }, function(){
            markers = handler.addMarkers(<%= raw @markers.to_json %>);
            handler.bounds.extendWith(markers);
            handler.fitMapToBounds();
            });
          })
        <% end %>
      <% end %>

    <script src="https://maps.google.com/maps/api/js?sensor=false" type="text/javascript"></script>
    <script src="https://google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" type="text/javascript"></script>

    <script src="https://wagon-google-maps-markers.herokuapp.com/assets/application-5034196864c74ae1cc5f12e6d1f71223.js" type="text/javascript"></script>

    <script type="text/javascript">
      $(document).on('ready', function() {
        handler = Gmaps.build('Google');
        handler.buildMap({ internal: { id: 'map' } }, function(){
          markers = handler.addMarkers([
              { "lat": 48.8426531, "lng": 2.3248288 },
              { "lat": 48.8718757, "lng": 2.3500763 },
              { "lat": 48.8755557, "lng": 2.3768895 },
              { "lat": 48.8529369, "lng": 2.364178  }
            ]);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
        });
      })
    </script>

    <% content_for(:after_js) do %>
    <%= javascript_tag do %>
      $(document).ready(function() {
        alert('<%= j @alert_message %>');
      });
      <% end%>
    <% end%>
  </div>
  </body>
</html>