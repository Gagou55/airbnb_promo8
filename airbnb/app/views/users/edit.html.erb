<%= form_for(@user, html: { multipart: true }) do |f| %>
  <div class="form-group">
    <%= f.label :first_name %>
    <%= f.text_area :first_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :last_name %>
    <%= f.label :last_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :picture %>
    <%= f.file_field :picture %>
  </div>

  <div><%= f.submit %></div>

<% end %>